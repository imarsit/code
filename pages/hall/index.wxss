page {
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
}

.coupon {
    width: 100%;
    height: 100%;
    text-align: center;
}

.ccont {
    height: 170rpx;
    margin: auto;
    margin-top: 40rpx;
    display: flex;
    justify-content: space-between;
    width: 96%;
    overflow: hidden;
    background-color: #fff0ef;
}

.ccont .contpic {
    width: 25%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top-left-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
}

.ccont .contpic image {
    width: 50%;
}

.ccont .continfo {
    width: 40%;
    height: 100%;
    position: relative;
    padding-left: 10rpx;
}

.ccont .continfo .top {
    position: absolute;
    top: 20rpx;
    font-size: 32rpx;
    color: #333333;
    font-weight: bold;
}

.ccont .continfo .bottom {
    position: absolute;
    bottom: 40rpx;
    color: #f88335;
    font-size: 26rpx;
}

.ccont .continfo .bottom .condition {
    padding-left: 16rpx;
}

.ccont .continfo .geted {
    position: absolute;
    width: 30%;
    height: 48rpx;
    top: 0rpx;
    right: 9rpx;
    z-index: 99;
}

.ccont .continfo .geted image {
    width: 180%;
}

.getbox {
    width: 35%;
    height: 100%;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.getbox .contdraw {
    width: 200rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #f16731;
    color: #fffefe;
    font-size: 34rpx;
    border-radius: 10rpx;
}

.getbox .after {
    width: 200rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #d3d0cf;
    color: #fffefe;
    font-size: 34rpx;
    border-radius: 10rpx;
}

.none {
    margin-top: 70rpx;
}

.none image {
    width: 50%;
}

.none view {
    font-size: 34rpx;
	color: #b1b1b1;
	margin-top: 40rpx;
}