page {
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
}

.ctit {
    margin-top: 10rpx;
    text-align: center;
    height: 100rpx;
    width: 100%;
    background-color: #fff;
    padding-top: 10rpx;
}

.ctit view {
    color: #3a3a3a;
    font-size: 28rpx;
}

.ctit text {
    color: #818181;
    font-size: 24rpx;
}

.ccont {
    height: 200rpx;
    /* background-color: #fff; */
    margin: auto;
    margin-top: 10rpx;
    display: flex;
    justify-content: space-between;
    padding: 16rpx;

}

.ccont .contpic {
    width: 25%;
    height: 100%;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top-left-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
}

.ccont .contpic image {
    width: 90%;
}

.ccont .continfo {
    width: 45%;
    height: 100%;
    background-color: #fff;
    position: relative;
    padding-left: 10rpx;
    /* border-right-style: dashed;
    border-width: 2rpx;
    border-right-color: #818181; */
    /* border-bottom-right-radius: 20rpx;
    border-top-right-radius: 20rpx; */
}

.ccont .continfo .top {
    position: absolute;
    top: 20rpx;
    font-size: 36rpx;
    color: #373737;
}

.ccont .continfo .bottom {
    position: absolute;
    bottom: 20rpx;
    color: #ec494c;
}

.ccont .continfo .bottom .type {
    font-size: 28rpx;
    position: absolute;
    top: -8rpx;
}

.ccont .continfo .bottom .price {
    padding-left: 26rpx;
}

.ccont .continfo .bottom .condition {
    padding-left: 16rpx;
    font-size: 28rpx;
}

.ccont .contdraw {
    width: 30%;
    height: 100%;
    line-height: 200rpx;
    background-color: #fff;
    background-color: #74d1d6;
    color: #fff;
    border-bottom-right-radius: 20rpx;
    border-top-right-radius: 20rpx;
}